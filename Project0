import random

class Player:
    def __init__(self, name):
        self.name = name
        self.energy = 50
        self.happiness = 50
        self.study_points = 0
        self.social_points = 0
        self.money = 30
        self.stayed_up_late = False
        self.ate_junk = 0
    
    def display_stats(self):
        print(f"\n{self.name}'s Stats:")
        print(f"Energy: {self.energy}")
        print(f"Happiness: {self.happiness}")
        print(f"Money: ${self.money}")
        print("-" * 20)

def get_name():
    """Get and validate player name"""
    while True:
        name = input("What's your name? ").strip()
        if name and len(name) <= 15:
            return name
        print("Please enter a valid name (1-15 characters)!")

def get_choice(prompt, max_num):
    """Get and validate player choice with recursive prompting"""
    while True:
        try:
            choice = int(input(prompt))
            if 1 <= choice <= max_num:
                return choice
            print(f"Please choose a number between 1 and {max_num}!")
        except ValueError:
            print("Please enter a valid number!")

def decision_1_friday_after_school(player):
    """Decision 1: Right after school ends"""
    print(f"\nFRIDAY 3:30 PM")
    print(f"School just ended! What does {player.name} do first?")
    print("1. Go straight home")
    print("2. Hang out with friends for a bit")
    print("3. Stop by the library")
    print("4. Get a snack from the vending machine")
    
    choice = get_choice(f"{player.name}, what's your move? (1-4): ", 4)
    
    if choice == 1:
        print(f"\n{player.name} heads straight home to decompress.")
        player.energy += 5
        player.happiness += 3
    elif choice == 2:
        print(f"\n{player.name} chats with friends outside school.")
        player.happiness += 8
        player.social_points += 1
    elif choice == 3:
        print(f"\n{player.name} stops by the library to get a head start.")
        player.study_points += 1
        player.energy -= 5
    else:
        print(f"\n{player.name} grabs some chips and soda.")
        player.happiness += 5
        player.money -= 3
        player.ate_junk += 1
    
    player.display_stats()

def decision_2_friday_evening(player):
    """Decision 2: Friday Evening Plans"""
    print(f"\nFRIDAY 6:00 PM")
    print(f"Dinner time! What are {player.name}'s evening plans?")
    print("1. Study for Monday's test")
    print("2. Video call friends")
    print("3. Watch TV and relax")
    print("4. Go out to eat somewhere")
    
    choice = get_choice(f"{player.name}, what sounds good? (1-4): ", 4)
    
    if choice == 1:
        print(f"\n{player.name} spends the evening studying. Smart but tiring!")
        player.energy -= 15
        player.happiness -= 8
        player.study_points += 2
    elif choice == 2:
        print(f"\n{player.name} has a fun video call with friends!")
        player.happiness += 12
        player.social_points += 1
    elif choice == 3:
        print(f"\n{player.name} enjoys a peaceful evening watching shows.")
        player.energy += 8
        player.happiness += 8
    else:
        print(f"\n{player.name} goes out for a nice dinner!")
        player.happiness += 15
        player.money -= 18
    
    player.display_stats()

def decision_3_friday_night(player):
    """Decision 3: Friday Night Late Decision"""
    print(f"\nFRIDAY 10:00 PM")
    print(f"It's getting late. What does {player.name} do?")
    print("1. Go to bed early (responsible choice)")
    print("2. Stay up late gaming/watching movies")
    print("3. Text friends until late")
    print("4. Do some light studying before bed")
    
    choice = get_choice(f"Late night decision for {player.name}? (1-4): ", 4)
    
    if choice == 1:
        print(f"\n{player.name} goes to bed at 10:30 PM. So responsible!")
        player.energy += 15
        player.happiness += 5
    elif choice == 2:
        print(f"\n{player.name} stays up until 2 AM gaming/watching movies!")
        player.happiness += 18
        player.energy -= 20
        player.stayed_up_late = True
    elif choice == 3:
        print(f"\n{player.name} texts friends until 1 AM!")
        player.happiness += 15
        player.social_points += 2
        player.energy -= 15
        player.stayed_up_late = True
    else:
        print(f"\n{player.name} does some studying before bed.")
        player.study_points += 1
        player.energy -= 8
    
    player.display_stats()

def decision_4_saturday_morning(player):
    """Decision 4: Saturday Morning (affected by Friday night)"""
    print(f"\nSATURDAY 10:00 AM")
    
    if player.stayed_up_late:
        print(f"{player.name} wakes up groggy from staying up late...")
        print("1. Sleep in until 2 PM")
        print("2. Force yourself to get up")
        print("3. Get coffee to wake up")
        print("4. Text friends but stay in bed")
    else:
        print(f"{player.name} wakes up feeling refreshed!")
        print("1. Study at the library")
        print("2. Meet friends for brunch")
        print("3. Go for a morning jog")
        print("4. Have a lazy morning in bed")
    
    choice = get_choice(f"What does {player.name} do? (1-4): ", 4)
    
    if player.stayed_up_late:
        if choice == 1:
            print(f"\n{player.name} sleeps until 2 PM. So much for the morning!")
            player.energy += 25
            player.happiness += 8
        elif choice == 2:
            print(f"\n{player.name} drags themselves out of bed feeling awful.")
            player.energy -= 10
            player.happiness -= 8
        elif choice == 3:
            print(f"\n{player.name} gets coffee but still feels sluggish.")
            player.energy += 8
            player.money -= 6
        else:
            print(f"\n{player.name} texts friends from bed.")
            player.happiness += 5
            player.social_points += 1
    else:
        if choice == 1:
            print(f"\n{player.name} has a very productive study session!")
            player.energy -= 15
            player.study_points += 3
        elif choice == 2:
            print(f"\n{player.name} has an amazing brunch with friends!")
            player.energy -= 5
            player.happiness += 18
            player.social_points += 2
            player.money -= 15
        elif choice == 3:
            print(f"\n{player.name} feels energized after a good jog!")
            player.energy += 10
            player.happiness += 12
        else:
            print(f"\n{player.name} enjoys a relaxing lazy morning.")
            player.energy += 12
            player.happiness += 10
    
    player.display_stats()

